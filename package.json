{
  "name": "svelte-client-server-rollup-template",
  "version": "1.0.0",
  "description": "Svelte Client/Server Rollup template",
  "license": "MIT",
  "repository": "github:matths/svelte-client-server-rollup-template",
  "scripts": {
    "create-ssl": "cd ./build/server/ssl && ./create.sh",
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "dev-inspect": "node --inspect node_modules/.bin/rollup -c -w",
    "start": "node build/server/index.js"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^15.1.0",
    "@rollup/plugin-node-resolve": "^9.0.0",
    "rollup": "^2.28.2",
    "rollup-plugin-livereload": "^2.0.0",
    "rollup-plugin-svelte": "^6.0.1",
    "rollup-plugin-terser": "^7.0.2",
    "svelte": "^3.29.0"
  },
  "dependencies": {
    "sirv-cli": "^0.4.4"
  }
}
